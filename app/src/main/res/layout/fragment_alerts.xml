<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentAlerts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alerts.view.AlertsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/aleetsToolbar"
        android:layout_width="374dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginStart="164dp"
        android:gravity="center"
        android:text="@string/Alerts"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aleetsToolbar" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="73dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="@+id/aleetsToolbar"
        app:layout_constraintTop_toTopOf="@+id/aleetsToolbar"
        app:srcCompat="@drawable/arrow_back" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_alert_floating"
        android:layout_width="60dp"
        android:layout_height="66dp"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/alarm_add"
        app:backgroundTint="@color/white"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="50dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_alert"
        android:layout_width="409dp"
        android:layout_height="681dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aleetsToolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>